<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nativeAd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ad_bg_color">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAdIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardBackgroundColor="@color/ad_bg_color"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:id="@+id/adIconClone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:contentDescription="@null"
                        tools:src="@mipmap/ic_launcher" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
   android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="5dp">

                    <!-- AD Tag -->
                    <TextView
                        android:id="@+id/tvAdTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:paddingVertical="2dp"
                    android:paddingHorizontal="3dp"
                        android:background="@drawable/bg_ad_tag"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="AD"
                        android:textSize="10sp"
                        android:textColor="@color/ad_tag_text_color"
                        android:includeFontPadding="false" />

                    <TextView
                        android:id="@+id/adNameClone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:textColor="@color/ad_text_primary_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="@string/app_name" />

                </LinearLayout>



                <TextView
                    android:id="@+id/adBodyClone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:lines="2"
                    android:maxLines="2"
                    android:textColor="@color/ad_text_secondary_color"
                    android:textSize="12sp"
                    android:text="Install app" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/adCallToActionClone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_ad_btn"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/ad_btn_primary_color"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="@string/app_name" />

    </LinearLayout>

</LinearLayout>